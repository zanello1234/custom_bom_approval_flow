<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend Stock Picking Form to add Merge Components Button -->
        <record id="stock_picking_form_merge_components" model="ir.ui.view">
            <field name="name">stock.picking.form.merge.components</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- Add button in the operations section header -->
                <xpath expr="//page[@name='operations']//field[@name='move_ids_without_package']" position="before">
                    <div class="o_cp_buttons" style="margin-bottom: 10px;">
                        <button name="action_merge_duplicate_moves" 
                                string="ðŸ”„ Fusionar Componentes Duplicados" 
                                type="object" 
                                class="btn btn-secondary"
                                attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}"
                                help="Fusiona movimientos de stock de productos iguales sumando sus cantidades"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
