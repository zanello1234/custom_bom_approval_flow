<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Product Template Form View -->
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit.flexible.bom</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="is_flexible_bom" string="Flexible BOM"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_setup_base_bom" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-cogs"
                            invisible="not is_flexible_bom">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Setup Base</span>
                            <span class="o_stat_text">BOM</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

        <!-- Product Form View -->
        <record id="product_normal_form_view_inherit" model="ir.ui.view">
            <field name="name">product.product.form.inherit.flexible.bom</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="is_flexible_bom" string="Flexible BOM"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
